{% extends "layout.twig" %}

{# This content is rendered under the `content` block in `layout.html` #}
{% block content %}
    <img src="images/logo.jpg" alt="RPG Connect"/>
    {% if currentUser %}
        <h1>You're logged in, {{currentUser.name}}</h1>
    {% endif %}
    {% if currentUser %}
        <a href="/logout">Logout</a>
    {% else %}
        <a href="/register">Register</a>
        <a href="/login">Login</a>
    {% endif %}
{% endblock %}