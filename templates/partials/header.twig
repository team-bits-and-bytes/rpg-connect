<header>
    <div id="logo">
      <a href={{ path_for("root") }}>
          <img src="/images/rpgcLogotype.png" height="60px" alt="dice" />
      </a>
    </div>

    <nav>		
        <ul>
    		<li><a href={{ path_for("root") }}>Home</a></li>
      		<li><a href={{ path_for("about") }}>About</a></li>
      		{% if currentUser %}
      		    <li><a href={{ path_for("user") }}>Manage Account</a></li>
      		    <li><a href={{ path_for("rooms") }}>Manage Rooms</a></li>
      		{% endif %}
     		<li><a href={{ path_for("gameresources") }}>Game Resources</a></li>
            <li><a href={{ path_for("contact") }}>Contact</a></li>
    	</ul>
    </nav>

	<div id="logindiv">
        {% if currentUser %}
            <a class="button" href={{ path_for("logout") }}>Logout</a>
	    {% else %}
            <a class="button" href={{ path_for("register") }}>Register</a>
            <a class="button" href={{ path_for("login") }}>Login</a>
	    {% endif %}
	</div>
</header>